<?xml version="1.0" encoding="utf-8" ?>
<model name="Permission" table="t_permission">
    <property name="Id" field="f_id" notNull="True" primary="true" autoIncrement="true" joinInsert="false" jojnUpdate="false" desc="主键"/>
    <property name="Code" field="f_code" length="32" notNull="true" uniqueGroup="uc_code" joinUpdate="false" desc="权限编码" />
    <property name="Name" field="f_name" length="128" notNull="true" uniqueGroup="uc_name" desc="权限名称" />

    <property name="Type" type="Int16" notNull="true" desc="权限类型（0:显示权限，1:接口权限）" defaultValue="0" />

    <property name="Path" desc="接口路径" />
    <property name="Method" desc="接口请求方法（GET，POST，DELETE，PUT）" />
    
    <property name="CreateTime" type="DateTime" field="f_createtime" joinUpdate="false" desc="创建时间" />
    <property name="UpdateTime" type="DateTime" field="f_updatetime" desc="更新时间" />
</model>