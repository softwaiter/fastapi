<?xml version="1.0" encoding="utf-8" ?>
<model name="Organization" table="t_organization">
    <property name="Id" field="f_id" notNull="true" primary="true" autoIncrement="true" joinInsert="false" jojnUpdate="false" desc="主键"/>
    <property name="Code" field="f_code" length="32" notNull="true" uniqueGroup="uc_code" joinUpdate="false" desc="机构编码" />
    <property name="Name" field="f_name" length="128" notNull="true" uniqueGroup="uc_name" desc="机构名称" />
    <property name="Type" field="f_type" type="Int16" min="0" max="99" desc="类型（0:企业法人，1:个体工商户，2:事业单位，3:政府机构，4:社会团体，99:其他组织）" defaultValue="0" />
    <property name="Address" field="f_address" length="256" desc="机构地址" />
    <property name="Person" field="f_person" length="32" notNull="true" desc="负责人" />
    <property name="Mobile" field="f_mobile" indexGroup="idx_mobile" length="16" notNull="true" desc="手机号码" />
    <property name="Email" field="f_email" indexGroup="idx_email" length="128" notNull="true" desc="常用邮箱" />
    <property name="Certification" field="f_is_certification" type="Int16" min="0" max="3" desc="认证进度（0:未认证，1:审核中，2:已驳回，3:已认证）" defaultValue="0" />
    <property name="Actived" field="f_actived" type="Boolean" indexGroup="idx_actived" desc="是否激活" defaultValue="true" />
    <property name="Deleted" field="f_deleted" type="Boolean" indexGroup="idx_deleted" desc="是否删除" defaultValue="false" />
    <property name="CreateTime" type="DateTime" field="f_createtime" defaultValue="{{CurrentDateTime}}" joinUpdate="false" desc="创建时间" />
    <property name="UpdateTime" type="DateTime" field="f_updatetime" beforeSave="{{CurrentDateTime}}" desc="更新时间" />
</model>